co_root = None
def getRoot():
    """Returns the checkout directory root."""
    global co_root
    dir = os.getcwd()
    while exists(joinpath(dir,'CVS')) and dir and dir != '/':
        dir = dirname(dir)
    if not dir or dir == '/':
        raise Error('Not currently in a checked out directory')
    co_root = dir
    return co_root

