#!/bin/sh

# Package for source release for nightly transfer.
VERSION=`grep AM_INIT_AUTOMAKE configure.in | sed -e 's/[^0-9]*\([.0-9]*\).*/\1/'`
echo "Making source distribution";


if [ "$PLAT" != "i686-pc-linux-gnu" ]; then
    make clean
    make distclean
    rm -f config.cache config.status

    bn=`basename $PWD`
    dn=`dirname $PWD`
    tarfilename="xxdiff-$VERSION.src.tar.gz"
    cd $dn
    rm $tarfilename
    tar zcvf $tarfilename $bn
    
else
    make dist
    mv xxdiff-$VERSION.tar.gz ../xxdiff-$VERSION.src.tar.gz
fi
